<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.bsk.project.bsk_project.PinController"
      alignment="TOP_CENTER"
      spacing="10.0"
      style="-fx-font-size: 12px"
      >

    <Label text="WprowadÅº PIN"/>

    <Label fx:id="pinPlaceHolder" />

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Button text="1" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#enterDigit" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button text="2" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#enterDigit" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button text="3" GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#enterDigit" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#enterDigit" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#enterDigit" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#enterDigit" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button text="7" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#enterDigit" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#enterDigit" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#enterDigit" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button text="C" GridPane.columnIndex="0" GridPane.rowIndex="3" onAction="#clearPin" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#enterDigit" style="-fx-pref-width: 35px; -fx-pref-height: 35px;"/>
        <Button fx:id="submitButton" text="OK" GridPane.columnIndex="2" GridPane.rowIndex="3" onAction="#submitPin" style="-fx-pref-width: 35px; -fx-pref-height: 35px" disable="true"/>
    </GridPane>

    <Button fx:id="privateKeyButton" text="Skopiuj klucz prywatny" disable="true" onAction="#copyPrivateKey"/>
    <Button fx:id="publicKeyButton" text="Skopiuj klucz publiczny" disable="true" onAction="#copyPublicKey"/>

</VBox>